<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{titulo}}
                            </h3>
                        </a>
                        <p class="m-2">{{descripcion}}</p>
                        <p>{{timeago created_at}}</p>
                         {{!-- <p>{{timeago updated_at}}</p> --}}
                         <a href="/links/delete/{{id}}" class="btn btn-danger">Eliminar</a>
                         <a href="/links/edit/{{id}}" class="btn btn-secondary">Editar</a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text text-center">
                    <p>There are not links saved yet"No hay links creados aun"</p>
                    <a href="/links/add">Created one</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>